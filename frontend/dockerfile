# Build stage
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies inside container for Alpine Linux
RUN npm ci || npm install

# Copy source code (exclude node_modules)
COPY . .

# Expose port 3000
EXPOSE 3000

# Start the app
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]